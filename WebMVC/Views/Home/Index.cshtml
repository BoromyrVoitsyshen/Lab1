﻿@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <style>
        body {
            background-color: black;
        }

        .navbar {
            z-index: 2;
        }

        .btn {
            z-index: 1;
        }

        .bg {
            position: absolute;
            z-index: 1;
            left: -10px;
            top: -10px;
            right: 0px;
            bottom: -10px;
            filter: blur(5px);
            background: url('../Images/Main1.jpg') no-repeat center;
            background-size: cover;
            background-color: black
        }

        .text-center {
            position: absolute;
            transform: translate(-50%, -50%);
            top: 50%;
            left: 50%;
            z-index: 2;
            width: 100%;
            height: 80%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .list {
            display: flex;
            width: 50vw;
            padding: 0;
            align-content: center;
            z-index: 2;
            height: fit-content;
            flex-direction: column;
        }


        .list-item {
            background-color: rgba(240, 248, 255, 0.505);
            padding: 10px;
            border: 2px black solid;
            border-top: 1px black solid;
            border-bottom: 1px black solid;
            opacity: 1;
            text-align: center;
            font-size: 20px;
            z-index: 2;
            transition: scale 0.5s;
        }

            .list-item:first-child {
                border-top: 2px black solid;
            }

            .list-item:last-child {
                border-bottom: 2px black solid;
            }

            .list-item:hover {
                color: #000;
                scale: 110%;
                border: 2px black solid;
                z-index: 3;
                transition: scale 0.5s;
            }

        a {
            text-decoration: none;
            color: #000;
        }

        p {
            margin: 0;
        }
    </style>
</head>

<body>
    <div class="text-center">
        <div class="bg"></div>

        <div class="list">
            <a class="list-item" href='@Url.Action("Index", "Genres")'><p class="text-lg-center">Жанри</p></a>
            <a class="list-item" href='@Url.Action("Index", "Books")'><p class="text-lg-center">Книги</p></a>
            <a class="list-item" href='@Url.Action("Index", "Authors")'><p class="text-lg-center">Автори</p></a>
            <a class="list-item" href='@Url.Action("Index", "BorrowedBooks")'><p class="text-lg-center">Позичені книги</p></a>
            <a class="list-item" href='@Url.Action("Index", "Publishers")'><p class="text-lg-center">Видавці</p></a>
            <a class="list-item" href='@Url.Action("Index", "Readers")'><p class="text-lg-center">Читачі</p></a>
        </div>
    </div>
</body>
</html>